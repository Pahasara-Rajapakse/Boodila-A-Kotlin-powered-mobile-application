<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_show_owner_ad_information">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:background="@color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/card_background"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imageViewerOwner"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <TextView
                    android:id="@+id/boardingPriceOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS: "
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/adRoomTypeOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="room Type"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/distanceOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="distance"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/ownerNameOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner name"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/ownerAddressOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: 123 Main Street, City"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/ownerPhoneOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone: +1234567890"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/ownerEmailOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: john.doe@example.com"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of beds "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/numberOfBedsOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Beds: 2"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="18dp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/facilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facilities: "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/displayFacilitiesOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facilities..."
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="18dp"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Information"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/displayDescriptionOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="description..."
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="18dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/locationDetailsOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location details here"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="18dp"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/updatedOwner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="UPDATE"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_hover_effect_for_owner"
            android:drawableStart="@drawable/update_icon"
            android:drawableTint="@color/white"/>

    </LinearLayout>

</FrameLayout>